{
  "version": 8,
  "name": "OpenFreeMap Bright",
  "sources": {
    "ofm": {
      "type": "raster",
      "tiles": [
        "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "Â© OpenStreetMap contributors"
    }
  },
  "layers": [
    {
      "id": "ofm-base",
      "type": "raster",
      "source": "ofm",
      "minzoom": 0,
      "maxzoom": 19,
      "paint": {
        "raster-brightness-min": 0.05,
        "raster-brightness-max": 1.0,
        "raster-contrast": 0.12,
        "raster-saturation": 0.25,
        "raster-hue-rotate": 4
      }
    }
  ]
}

